<div class="main">
  <div class="inner">
    <div class="form__wrapper">
      <h2 class="page-heading">新規投稿</h2>
        <%= form_with(model: @post, local: true) do |f| %>
          <div class="field">
            <%= f.label :title, "タイトル" %><br />
            <%= f.text_field :title %>
          </div>

          <div class="field">
            <%= f.label :comment, "コメント" %><br />
            <%= f.text_area :comment, class: :form__text %>
          </div>

          <div class="field">
            <%= f.label :address, "住所" %><br />
            <%= f.text_area :address, class: :form__text %>
          </div>

          <div class="field">
            <%= f.label :image, "写真" %><br />
            <%= f.file_field :image %>
          </div>

          <div class="actions">
            <%= f.submit "保存する", class: :form__btn %>
          </div>
        <% end %>
    </div>
  </div>
</div>